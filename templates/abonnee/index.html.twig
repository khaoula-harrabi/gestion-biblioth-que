{% extends 'base.html.twig' %}

{% block title %}Abonnés{% endblock %}
{% block stylesheets %}
    <link href="{{ asset('js/dataTables/dataTables.bootstrap.css') }}" rel="stylesheet" />

{% endblock %}
{% block body %}
    <div>
        <a href="{{ path('abonnee_new') }}"><span class="btn btn-primary"><i class="fa fa-plus"></i> &nbsp; Nouveau Abonné</span> </a>

    </div>
    <br>

    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
        <thead>
        <tr>
            <th>#</th>
            <th>Nom</th>
            <th>Pays</th>
            <th>Adresse</th>
            <th>Télephone</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for i,abonnee in abonnees %}
            <tr>
                <td>{{ i+1 }}</td>
                <td>{{ abonnee.nomabonne  }}</td>
                <td>{{ abonnee.pays }}</td>
                <td>{{ abonnee.adresse}}</td>
                <td>{{ abonnee.telephone }}</td>
                <td>

                    <a href="{{ path('abonnee_show', {'id': abonnee.id}) }}"><span class="btn btn-default"><i class="fa fa-eye"></i> </span> </a> &nbsp;
                    <a href="{{ path('abonnee_edit', {'id': abonnee.id}) }}"><span class="btn btn-success"><i class="fa fa-pencil"></i> </span> </a>
                    <a href="{{ path('supprimer_abonne', {'id': abonnee.id}) }}"><span class="btn btn-danger"><i class="fa fa-trash-o"></i> </span> </a>

                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">Pas d'enregistrement </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
{% block javascripts %}
    <script src="{{ asset('js/dataTables/jquery.dataTables.js') }}"></script>
    <script src="{{ asset('js/dataTables/dataTables.bootstrap.js') }}"></script>
    <script>
        $(document).ready(function () {
            $('#dataTables-example').dataTable();
        });
    </script>
{% endblock %}
