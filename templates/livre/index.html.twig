{% extends 'base.html.twig' %}

{% block title %}Livres{% endblock %}
{% block stylesheets %}
    <link href="{{ asset('js/dataTables/dataTables.bootstrap.css') }}" rel="stylesheet" />

{% endblock %}
{% block body %}
    <div>
        <a href="{{ path('livre_new') }}"><span class="btn btn-primary"><i class="fa fa-plus"></i> &nbsp; Nouveau Livre </span> </a>

    </div>
    <br>

    <table  class="table table-striped table-bordered table-hover" id="dataTables-example">
        <thead>
            <tr>
                <th>#</th>
                <th>Titre</th>
                <th>Nbre De Pages</th>
                <th>Date Edition</th>
                <th>Nbre Exemplaires</th>
                <th>Prix</th>
                <th>Isbn</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for i,livre in livres %}
            <tr>
                <td>{{ i+1 }}</td>
                <td>{{ livre.titre }}</td>
                <td>{{ livre.nbpages }}</td>
                <td>{{ livre.dateedition ? livre.dateedition|date('Y-m-d') : '' }}</td>
                <td>{{ livre.nbreexemplaires }}</td>
                <td>{{ livre.prix }}</td>
                <td>{{ livre.isbn }}</td>
                <td>
                    <a href="{{ path('livre_show', {'id': livre.id}) }}"><span class="btn btn-default"><i class="fa fa-eye"></i> </span> </a>
                    <a href="{{ path('livre_edit', {'id': livre.id}) }}"><span class="btn btn-success"><i class="fa fa-pencil"></i> </span> </a>
                    <a href="{{ path('livre_delete_2', {'id': livre.id}) }}"><span class="btn btn-danger"><i class="fa fa-trash-o"></i> </span> </a>


                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">Pas d'enregistrement trouv√©s </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
{% block javascripts %}
    <script src="{{ asset('js/dataTables/jquery.dataTables.js') }}"></script>
    <script src="{{ asset('js/dataTables/dataTables.bootstrap.js') }}"></script>
    <script>
        $(document).ready(function () {
            $('#dataTables-example').dataTable();
        });
    </script>
{% endblock %}