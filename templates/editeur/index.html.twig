{% extends 'base.html.twig' %}

{% block title %}Editeur{% endblock %}
{% block stylesheets %}
    <link href="{{ asset('js/dataTables/dataTables.bootstrap.css') }}" rel="stylesheet" />

{% endblock %}
{% block body %}
  <div>
      <a href="{{ path('editeur_new') }}"><span class="btn btn-primary"><i class="fa fa-plus"></i> &nbsp; Nouveau Editeur</span> </a>

  </div>
    <br>

    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
        <thead>
            <tr>
                <th>#</th>
                <th>Nom</th>
                <th>Pays</th>
                <th>Adresse</th>
                <th>TÃ©lephone</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for i,editeur in editeurs %}
            <tr>
                <td>{{ i+1 }}</td>
                <td>{{ editeur.nomediteur }}</td>
                <td>{{ editeur.pays }}</td>
                <td>{{ editeur.adresse }}</td>
                <td>{{ editeur.telephone }}</td>
                <td>

