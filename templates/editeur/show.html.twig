{% extends 'base.html.twig' %}

{% block title %}Editeur{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col col-xs-12 col-lg-3 col-md-4 col-sm-6">
                <b>ID</b>
            </div>
            <div class="col col-xs-12 col-lg-9 col-md-8 col-sm-6">
                {{ editeur.id  }}
            </div>
        </div>
        <div class="row">
            <div class="col col-xs-12 col-lg-3 col-md-4 col-sm-6">
                <b>Nom</b>
            </div>
            <div class="col col-xs-12 col-lg-9 col-md-8 col-sm-6">
                {{editeur.nomediteur}}
            </div>
        </div>
        <div class="row">
            <div class="col col-xs-12 col-lg-3 col-md-4 col-sm-6">
                <b>Pays</b>
            </div>
            <div class="col col-xs-12 col-lg-9 col-md-8 col-sm-6">
                {{ editeur.pays }}
            </div>

        </div>
        <div class="row">
            <div class="col col-xs-12 col-lg-3 col-md-4 col-sm-6">
                <b>Adresse</b>
            </div>
            <div class="col col-xs-12 col-lg-9 col-md-8 col-sm-6">
                {{ editeur.adresse }}
            </div>

        </div>
        <div class="row">
            <div class="col col-xs-12 col-lg-3 col-md-4 col-sm-6">
                <b>téléphone</b>
            </div>
            <div class="col col-xs-12 col-lg-9 col-md-8 col-sm-6">
                {{ editeur.telephone }}
            </div>

        </div>
    </div>
    <hr>

    <div class="container">
        <div class="row">
        <div class="col col-lg-2"> <a href="{{ path('editeur_index') }}"><span class="btn btn-primary"><i class="fa fa-backward"></i>&nbsp; Retour</span></a> </div>

            <div class="col col-lg-2"> <a href="{{ path('editeur_edit', {'id': editeur.id}) }}"><span class="btn btn-success"><i class="fa fa-pencil"></i>&nbsp; Editer</span></a> </div>
            {{ include('editeur/_delete_form.html.twig') }}

        </div>
    </div>


{% endblock %}
