{% extends 'base.html.twig' %}

{% block title %}Index Des Emprunts {% endblock %}
{% block stylesheets %}
    <link href="{{ asset('js/dataTables/dataTables.bootstrap.css') }}" rel="stylesheet" />

{% endblock %}
{% block body %}
    <div>
        <a href="{{ path('nouvel_emprunt') }}"><span class="btn btn-primary"><i class="fa fa-plus"></i> &nbsp; Nouveau </span> </a>

    </div>
    <br>
    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
        <thead>
        <tr>
            <th>#</th>
            <th>date emprunt</th>
            <th>Date retour</th>
            <th>Action</th>



        </tr>
        </thead>
        <tbody>
        {% for c,a in listeEmprunts %}
            <tr>
                <td>{{ c+1 }}</td>
               <td>{{ a.date}}
                </td>
                <td>{{ a.dateRetour}}
                </td>

                   <!-- <a href="{{ path('afficher_auteur',{'id':a.id}) }}"><span class="btn btn-default"><i class="fa fa-eye"></i> </span> </a> &nbsp;
                    --><td><a href="{{ path('edit_emprunt',{'id':a.id}) }}"><span class="btn btn-success"><i class="fa fa-pencil"></i> </span> </a> &nbsp;
                    <a href="{{ path('supprimer_emprunt',{'id':a.id}) }}"><span class="btn btn-danger"><i class="fa fa-trash-o"></i> </span> </a>

                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
{% block javascripts %}
    <script src="{{ asset('js/dataTables/jquery.dataTables.js') }}"></script>
    <script src="{{ asset('js/dataTables/dataTables.bootstrap.js') }}"></script>
    <script>
        $(document).ready(function () {
            $('#dataTables-example').dataTable();
        });
    </script>
{% endblock %}
